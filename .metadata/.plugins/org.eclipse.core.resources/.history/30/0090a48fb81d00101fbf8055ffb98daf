#include "stm32f4xx.h"

volatile uint32_t count1 = 0;
volatile uint32_t count2 = 0;
volatile uint32_t count4 = 0;

void GPIO_Init(void) {
    // Enable clock for GPIOA, GPIOB, GPIOC
    RCC->AHB1ENR |= (1 << 0); // GPIOA
    RCC->AHB1ENR |= (1 << 1); // GPIOB
    RCC->AHB1ENR |= (1 << 2); // GPIOC

    // Set PA5, PB6, PC7 as output
    GPIOA->MODER &= ~(3 << (5 * 2));
    GPIOA->MODER |=  (1 << (5 * 2)); // PA5 output

    GPIOB->MODER &= ~(3 << (6 * 2));
    GPIOB->MODER |=  (1 << (6 * 2)); // PB6 output

    GPIOC->MODER &= ~(3 << (7 * 2));
    GPIOC->MODER |=  (1 << (7 * 2)); // PC7 output
}

void TIM1_Init(void) {
    // Enable clock for TIM1
    RCC->APB2ENR |= RCC_APB2ENR_TIM1EN;

    // Prescaler & ARR for 1ms interrupt
    TIM1->PSC = 16000 - 1;    // 16MHz / 16000 = 1kHz → 1ms tick
    TIM1->ARR = 1;        // Auto-reload at 1ms

    TIM1->DIER |= TIM_DIER_UIE;   // Enable update interrupt
    TIM1->CR1 |= TIM_CR1_CEN;     // Enable counter

    // Advanced-control timer (TIM1) needs main output enable:
    TIM1->BDTR |= TIM_BDTR_MOE;

    // Enable TIM1 interrupt
    NVIC_EnableIRQ(TIM1_UP_TIM10_IRQn);
}

// TIM1 update interrupt handler
void TIM1_UP_TIM10_IRQHandler(void) {
    if (TIM1->SR & TIM_SR_UIF) {        // Check update interrupt flag
        TIM1->SR &= ~TIM_SR_UIF;        // Clear flag

        count1++;
        count2++;
        count4++;

        if (count1 >= 1000) {
            GPIOA->ODR ^= (1 << 5);     // Toggle PA5
            count1 = 0;
        }
        if (count2 >= 2000) {
            GPIOB->ODR ^= (1 << 6);     // Toggle PB6
            count2 = 0;
        }
        if (count4 >= 4000) {
            GPIOC->ODR ^= (1 << 7);     // Toggle PC7
            count4 = 0;
        }
    }
}

int main(void) {
    GPIO_Init();
    TIM1_Init();

    while (1) {
        // Do nothing in main loop, all work in ISR
    }
}
